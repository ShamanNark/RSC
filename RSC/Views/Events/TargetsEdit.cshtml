@model RSC.Controllers.Models.EventsViewModels.EventCreateViewModel

<div class="col-md-12 paddingMainblock">
    <h2>Целевые показатели</h2>
    <div class="targets">
        @for (var i = 0; i < Model.TargetIndicators.Count(); i++)
        {
            <div id="addrow_@i" class="targetevent">
                @Html.HiddenFor(model => Model.TargetIndicators[i].Id)
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => Model.TargetIndicators[i].Name, new { @class = "control-label" })
                    @Html.EditorFor(model => Model.TargetIndicators[i].Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => Model.TargetIndicators[i].Name)
                </div>
                <div class="form-group col-md-2">
                    @Html.LabelFor(model => Model.TargetIndicators[i].Unit, new { @class = "control-label" })
                    @Html.EditorFor(model => Model.TargetIndicators[i].Unit, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => Model.TargetIndicators[i].Unit)
                </div>
                <div class="form-group col-md-2">
                    @Html.LabelFor(model => Model.TargetIndicators[i].BasicValue, new { @class = "control-label" })
                    @Html.EditorFor(model => Model.TargetIndicators[i].BasicValue, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => Model.TargetIndicators[i].BasicValue)
                </div>
                <div class="form-group col-md-2">
                    @Html.LabelFor(model => Model.TargetIndicators[i].PlannedValue, new { @class = "control-label" })
                    @Html.EditorFor(model => Model.TargetIndicators[i].PlannedValue, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => Model.TargetIndicators[i].PlannedValue)
                </div>
            </div>
        }
    </div>
    <button id="add_row" class="btn btn-sm btn-success">Добавить</button>
    <button id="delete_row" class="btn btn-sm btn-danger">Удалить</button>
</div>