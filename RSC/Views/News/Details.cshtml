@model RSC.Models.NewsViewModels.DetailsNewsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .newsheader {
        background: linear-gradient(to right, #e55727 3%, #e21c25) 0 0 no-repeat;
    }

    .headerTitle{
        color:white;
    }

    .rs-news__title {
        font-size: 24px;
        font-weight: 800;
        padding-top: 20px;
        padding-bottom: 20px;
    }
    .rs-news__img {
        padding-top: 20px;
        padding-bottom: 20px;
    }
</style>
<div class="newsheader">
    <h2 class="headerTitle">Новости</h2>
</div>
<div>
    <div class="rs-news__title">@Html.DisplayFor(model => model.Title)</div>
    
    <div class="rs-news__img col-md-12">
        <img src="@Url.Content(Model.MainImagePath)">
    </div>
    
    <div class="col-md-12">
        @Html.Raw(@Model.Text)
    </div>   
</div>
<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>
