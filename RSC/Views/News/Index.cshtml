@using RSC.Models.NewsViewModels
@model RSC.Models.NewsViewModels.IndexNewsViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .text {
        display: block;
        width: 500px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }
</style>

<h2>Index</h2>

<p>
    <a asp-action="Create">Создать новую</a>
</p>

<p>
    <a asp-action="NewsBoard">Посмотреть в каталоге</a>
</p>

<table class="table">
    <thead>
        <tr>
                <th>
                    Изображение
                </th>
                <th>
                    Id
                </th>
                <th>
                    Оглавление
                </th>
                <th>
                    Содержание
                </th>
                <th>
                    Дата создания
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.News) {
        <tr>
            <td>
                <p><img height="50" src="@Url.Content(item.MainImagePath)"></p>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <span class="text">
                    @Html.Raw(@item.Text)
                </span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDateTime)
            </td>
            <td style="display: flex; flex-direction: row; justify-content: space-between;">
                @Html.ActionLink("Изменить", "Edit", new {  id=item.Id  }) |
                @Html.ActionLink("Детали", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
