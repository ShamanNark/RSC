@model RSC.Controllers.Models.NewsViewModels.NewsMainPageViewModel

@{
    ViewData["Title"] = "NewsMainPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    .titleimage {
        position: absolute;
        top: 80%;
        left: 20%;
        width: 100%;
        color:snow;
    }
</style>

<div class="col-md-12">
    <h3>НОВОСТИ</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <div class="col-md-12">
                <div class="col-md-4">
                    <img class="col-md-12" src="@Url.Content( @Model.News.Select(n => n.ObjectNews.HomePageImage).Skip(1).FirstOrDefault())">     
                </div>
                <div class="col-md-8">
                    <p style="font-weight: bold">@Model.News.Skip(1).Select(n => n.ObjectNews.Title).FirstOrDefault()</p>
                    <div style="color:lightgray">@Model.News.Skip(1).Select(n => n.ObjectNews.UpdateDateTime).FirstOrDefault()</div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-md-4">
                    <img class="col-md-12" src="@Url.Content( @Model.News.Select(n => n.ObjectNews.HomePageImage).Skip(2).FirstOrDefault())">
                </div>
                <div class="col-md-8">
                    <p style="font-weight: bold">@Model.News.Skip(2).Select(n => n.ObjectNews.Title).FirstOrDefault()</p>
                    <div style="color:lightgray">@Model.News.Skip(2).Select(n => n.ObjectNews.UpdateDateTime).FirstOrDefault()</div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-md-4">
                    <img class="col-md-12" src="@Url.Content( @Model.News.Select(n => n.ObjectNews.HomePageImage).Skip(3).FirstOrDefault())">
                </div>
                <div class="col-md-8">
                    <p style="font-weight: bold">@Model.News.Skip(3).Select(n => n.ObjectNews.Title).FirstOrDefault()</p>
                    <div style="color:lightgray">@Model.News.Skip(3).Select(n => n.ObjectNews.UpdateDateTime).FirstOrDefault()</div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-md-4">
                    <img class="col-md-12" src="@Url.Content( @Model.News.Select(n => n.ObjectNews.HomePageImage).Skip(4).FirstOrDefault())">
                </div>
                <div class="col-md-8">
                    <p style="font-weight: bold">@Model.News.Skip(4).Select(n => n.ObjectNews.Title).FirstOrDefault()</p>
                    <div style="color:lightgray">@Model.News.Skip(4).Select(n => n.ObjectNews.UpdateDateTime).FirstOrDefault()</div>
                </div>
            </div>
        </div>
        <div class="col-md-8 image">
            <img class="colmd-8" src="@Url.Content( @Model.News.Select(n => n.ObjectNews.MainImage).FirstOrDefault())">     
            <h4 class="titleimage">@Model.News.Select(n => n.ObjectNews.Title).FirstOrDefault()</h4>
        </div>
    </div>
</div>
<div class="col-md-12">
    <h3>АНОНС</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <div class="row">
                <h5>@Model.Announs.Select(a => a.NameEvent).FirstOrDefault()</h5>
            </div>
            <div class="row">
                <img class="row" src="@Url.Content( @Model.Announs.Select(a => a.PublicEventInformation.SmallFoto.Path).FirstOrDefault())">  
            </div>
            <div class="row">
                <p>@Model.Announs.Select(a => a.PublicEventInformation.TextForDetailsView).FirstOrDefault()</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="row">
                <h5>@Model.Announs.Select(a => a.NameEvent).Skip(1).FirstOrDefault()</h5>
            </div>
            <div class="row">
                <img class="row" src="@Url.Content( @Model.Announs.Select(a => a.PublicEventInformation.SmallFoto.Path).Skip(1).FirstOrDefault())">
            </div>
            <div class="row">
                <p>@Model.Announs.Select(a => a.PublicEventInformation.TextForDetailsView).Skip(1).FirstOrDefault()</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="row">
                <h5>@Model.Announs.Select(a => a.NameEvent).Skip(2).FirstOrDefault()</h5>
            </div>
            <div class="row">
                <img class="row" src="@Url.Content( @Model.Announs.Select(a => a.PublicEventInformation.SmallFoto.Path).Skip(2).FirstOrDefault())">
            </div>
            <div class="row">
                <p>@Model.Announs.Select(a => a.PublicEventInformation.TextForDetailsView).Skip(2).FirstOrDefault()</p>
            </div>
        </div>
    </div>
</div>
<div class="col-md-12">
    <h3>ИНТЕРВЬЮ</h3>
    <hr />
    <div class="row">
        <div class="row">
            <div class="col-md-6">
                <img class="col-md-8" src="@Url.Content( @Model.Interviews.Select(i => i.ObjectNews.MainImage).FirstOrDefault())">     
            </div>
            <div class="col-md-6">
                <h4>@Model.Interviews.Select(i => i.ObjectNews.Title).FirstOrDefault()</h4>
                @Model.Interviews.Select(i => i.ObjectNews.Text).FirstOrDefault()
                <p style="color:lightgray">@Model.Interviews.Select(i => i.ObjectNews.UpdateDateTime).FirstOrDefault()</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <img class="col-md-8" src="@Url.Content( @Model.Interviews.Select(i => i.ObjectNews.MainImage).Skip(1).FirstOrDefault())">   
            </div>
            <div class="col-md-6">
                <h4>@Model.Interviews.Select(i => i.ObjectNews.Title).Skip(1).FirstOrDefault()</h4>
                @Model.Interviews.Select(i => i.ObjectNews.Text).Skip(1).FirstOrDefault()
                <p style="color:lightgray">@Model.Interviews.Select(i => i.ObjectNews.UpdateDateTime).FirstOrDefault()</p>
            </div>
        </div>
    </div>
</div>
<div class="col-md-12">
    <h3>БЛОГ</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <div class="col-md-12">
                <div class="col-md-4">
                    <img class="col-md-12" src="@Url.Content( @Model.Blogs.Select(n => n.ObjectNews.HomePageImage).Skip(1).FirstOrDefault())">
                </div>
                <div class="col-md-8">
                    <p style="font-weight: bold">@Model.Blogs.Skip(1).Select(n => n.ObjectNews.Title).FirstOrDefault()</p>
                    <div style="color:lightgray">@Model.Blogs.Skip(1).Select(n => n.ObjectNews.UpdateDateTime).FirstOrDefault()</div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-md-4">
                    <img class="col-md-12" src="@Url.Content( @Model.Blogs.Select(n => n.ObjectNews.HomePageImage).Skip(2).FirstOrDefault())">
                </div>
                <div class="col-md-8">
                    <p style="font-weight: bold">@Model.Blogs.Skip(2).Select(n => n.ObjectNews.Title).FirstOrDefault()</p>
                    <div style="color:lightgray">@Model.Blogs.Skip(2).Select(n => n.ObjectNews.UpdateDateTime).FirstOrDefault()</div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-md-4">
                    <img class="col-md-12" src="@Url.Content( @Model.Blogs.Select(n => n.ObjectNews.HomePageImage).Skip(3).FirstOrDefault())">
                </div>
                <div class="col-md-8">
                    <p style="font-weight: bold">@Model.Blogs.Skip(3).Select(n => n.ObjectNews.Title).FirstOrDefault()</p>
                    <div style="color:lightgray">@Model.Blogs.Skip(3).Select(n => n.ObjectNews.UpdateDateTime).FirstOrDefault()</div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-md-4">
                    <img class="col-md-12" src="@Url.Content( @Model.Blogs.Select(n => n.ObjectNews.HomePageImage).Skip(4).FirstOrDefault())">
                </div>
                <div class="col-md-8">
                    <p style="font-weight: bold">@Model.Blogs.Skip(4).Select(n => n.ObjectNews.Title).FirstOrDefault()</p>
                    <div style="color:lightgray">@Model.Blogs.Skip(4).Select(n => n.ObjectNews.UpdateDateTime).FirstOrDefault()</div>
                </div>
            </div>
        </div>
        <div class="col-md-8 image">
            <img class="colmd-8" src="@Url.Content( @Model.Blogs.Select(n => n.ObjectNews.MainImage).FirstOrDefault())">
            <h4 class="titleimage">@Model.Blogs.Select(n => n.ObjectNews.Title).FirstOrDefault()</h4>
        </div>
    </div>
</div>