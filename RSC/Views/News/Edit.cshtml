@model RSC.Models.NewsViewModels.EditNewsViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>EditNewsViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            @Html.HiddenFor(model => model.Id)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedRubrics" class="control-label"></label>
                @Html.DropDownListFor(item => Model.SelectedRubrics, Model.NewsRubrics, new { @class = "chzn-select form-control", multiple = "multiple" })
                <span asp-validation-for="SelectedRubrics" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateDateTime" class="control-label"></label>
                <input asp-for="CreateDateTime" class="form-control" />
                <span asp-validation-for="CreateDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainImagePath" class="control-label"></label>
                <p><img height="100" src="@Url.Content(Model.MainImagePath)"></p>
                <input type="file" asp-for="MainImage"/>
                <span asp-validation-for="MainImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalImagePath" class="control-label"></label>
                <p><img height="100" src="@Url.Content(Model.MainImagePath)"></p>
                <input type="file" asp-for="AdditionalImage"/>
                <span asp-validation-for="AdditionalImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

