@model RSC.Models.HomeViewModels.HomeIndexViewModel
<div class="slider">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <div style="height: 670px;">
                    <div class="tag">
                        <div class="col-md-12">
                            <div class="col-md-4"><i class="fa fa-rocket fa-5x"></i></div>
                            <div class="col-md-8 tag-text"><h1>Студстартер</h1>
                                <a href="" class="btn-transparent">ПОЕХАЛИ</a></div>
                        </div>
                        

                        
                    </div>
                    <img src="img/Russia.png" alt="">
                </div>
                <div class="carousel-caption">
                </div>
            </div>
            <div class="item">
                <div style="height:670px;">
                    <img src="img/Russia.png" alt="">
                </div>
                <div class="carousel-caption">
                </div>
            </div>
            <div class="item">
                <div style="height:670px;">
                    <img src="img/Russia.png" alt="">
                </div>
                <div class="carousel-caption">
                </div>
            </div>
        </div>
    </div>
</div>
<div class="calendar">
    <div class="col-md-12">
        <h2>Календарь</h2>
        <h3>Единый календарь</h3>
        <div class="tags">
            <img src="img/tags.png" alt="">
        </div>
        <div class="calendar-buttons">
            <a href="" class="btn-transparent">НАЙДИ СВОЕ</a>
        </div>
    </div>
</div>

<div class="news-block">
    <div class="col-md-6 news-banner">
        <h1>Новости</h1>
        <p>
            Здесь будет какая-то информация о том, что это за
            «новости» в целом, что здесь можно найти и что узнать,
            но кратко, буквально одно-два предложения.
        </p>
        <div class="news-buttons">
            <a href="@Url.Action("NewsBoard","News")" class="btn-transparent">ПОСМОТРЕТЬ ВСЕ</a>
        </div>
    </div>
    @foreach (var item in Model.News)
    {
        <a href="@Url.Action("Details","News",new {id = @item.Id})">
            <div class="col-md-3 one-news-block" style="background-image: url(@Url.Content(item.HomePageImagePath)); -webkit-box-shadow: inset 0px -138px 41px -31px rgba(0,0,0,0.24); -moz-box-shadow: inset 0px -138px 41px -31px rgba(0,0,0,0.24); box-shadow: inset 0px -138px 41px -31px rgba(0,0,0,0.24);">
                <h3>@item.Title</h3>
                <h4>читать далее>></h4>
            </div>
        </a>
    }
</div>

<div class="studstarter">
    <div class="col-md-12">
        <h2>Студстартер</h2>
        <h3>Студстартер</h3>
        <div class="rounds col-md-12">
            <div class="col-md-4">
                <img src="img/round1.png" alt="">
            </div>
            <div class="col-md-4">
                <img src="img/round2.png" alt="">
            </div>
            <div class="col-md-4">
                <img src="img/round3.png" alt="">
