@model RSC.Models.NewsRubricsViewModels.NewsRubricViewModel

@{
    ViewData["Title"] = "Редактирование рубрики";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Изменить новостную рубрику</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(item => Model.Id)
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

