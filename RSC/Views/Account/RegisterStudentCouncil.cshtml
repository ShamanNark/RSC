@using RSC.Controllers.Models.AccountViewModels
@model RSC.Models.RegisterViewModels.RegisterStudentCouncilViewModel

@{
    ViewData["Title"] = "RegisterStudentCouncil";
}

<h2>Регистрация СО</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterStudentCouncil" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiddleName" class="control-label"></label>
                <input asp-for="MiddleName" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegionId" class="control-label"></label>
                @Html.DropDownList("RegionId", ViewBag.Regions as SelectList, htmlAttributes: new { @class = "form-control multiselect" })
                <span asp-validation-for="RegionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EducationalOrganizationIdCouncil" class="control-label"></label>
                @*@Html.DropDownList("EducationalOrganizationId", ViewBag.UniversityDatas as SelectList, htmlAttributes: new { @class= "form-control singleselect" })*@
                <select id="EducationalOrganizationId" name="EducationalOrganizationIdCouncil" class="form-control singleselect">
                    @if (ViewBag.UniversityDatas != null)
                    {
                        foreach (UniversityDatasViewModel item in @ViewBag.UniversityDatas)
                        {
                            <option value="@item.Id">@item.Name , @item.ShortName</option>
                        }
                    }
                </select>
                <span asp-validation-for="EducationalOrganizationIdCouncil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
