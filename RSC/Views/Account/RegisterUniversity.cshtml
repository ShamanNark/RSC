@using RSC.Controllers.Models.AccountViewModels
@using RSC.Data.DbModels
@model RSC.Models.RegisterViewModels.RegisterUniversityViewModel

<style>
    .multiselect-container > li > a {
        white-space: normal;
    }
</style>

<h2>Регистрация ООВО</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterUniversity" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApplicationUserViewModel.Email" class="control-label"></label>
                <input asp-for="ApplicationUserViewModel.Email" class="form-control" />
                <span asp-validation-for="ApplicationUserViewModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserViewModel.Avatar" class="control-label"></label>
                <input asp-for="ApplicationUserViewModel.Avatar" class="form-control" />
                <span asp-validation-for="ApplicationUserViewModel.Avatar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserViewModel.Surname" class="control-label"></label>
                <input asp-for="ApplicationUserViewModel.Surname" class="form-control" />
                <span asp-validation-for="ApplicationUserViewModel.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserViewModel.Name" class="control-label"></label>
                <input asp-for="ApplicationUserViewModel.Name" class="form-control" />
                <span asp-validation-for="ApplicationUserViewModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserViewModel.MiddleName" class="control-label"></label>
                <input asp-for="ApplicationUserViewModel.MiddleName" class="form-control" />
                <span asp-validation-for="ApplicationUserViewModel.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserViewModel.Birthday" class="control-label"></label>
                <input asp-for="ApplicationUserViewModel.Birthday" type="date" class="form-control" />
                <span asp-validation-for="ApplicationUserViewModel.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserViewModel.Gender" class="control-label"></label>
                <select asp-for="ApplicationUserViewModel.Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()"></select>
                <span asp-validation-for="ApplicationUserViewModel.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserViewModel.RegionId" class="control-label"></label>
                @Html.DropDownList("ApplicationUserViewModel.RegionId", ViewBag.Regions as SelectList, htmlAttributes: new { @class = "form-control  multiselect" })
                <span asp-validation-for="ApplicationUserViewModel.RegionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UniversityForm" class="control-label"></label>
                <input asp-for="UniversityForm" class="form-control" />
                <span asp-validation-for="UniversityForm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UniversityWebSite" class="control-label"></label>
                <input asp-for="UniversityWebSite" class="form-control" />
                <span asp-validation-for="UniversityWebSite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UniversityDataId" class="control-label"></label>
                <select id="UniversityDataId" name="UniversityDataId" class="form-control singleselect">
                    @if (ViewBag.UniversityDatas != null)
                    {
                        foreach (UniversityDatasViewModel item in @ViewBag.UniversityDatas)
                        {
                            <option value="@item.Id">@item.Name , @item.ShortName</option>
                        }
                    }
                </select>
                <span asp-validation-for="UniversityDataId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserViewModel.PhoneNumber" class="control-label"></label>
                <input asp-for="ApplicationUserViewModel.PhoneNumber" class="form-control" />
                <span asp-validation-for="ApplicationUserViewModel.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobPhoneNumber" class="control-label"></label>
                <input asp-for="JobPhoneNumber" class="form-control" />
                <span asp-validation-for="JobPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fax" class="control-label"></label>
                <input asp-for="Fax" class="form-control" />
                <span asp-validation-for="Fax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserViewModel.Password" class="control-label"></label>
                <input asp-for="ApplicationUserViewModel.Password" class="form-control" />
                <span asp-validation-for="ApplicationUserViewModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserViewModel.ConfirmPassword" class="control-label"></label>
                <input asp-for="ApplicationUserViewModel.ConfirmPassword" class="form-control" />
                <span asp-validation-for="ApplicationUserViewModel.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PowerOfAttorneyFile" class="control-label"></label>
                <input asp-for="PowerOfAttorneyFile" type="file" class="form-control" />
                <span asp-validation-for="PowerOfAttorneyFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserViewModel.VKLink"></label>
                <input asp-for="ApplicationUserViewModel.VKLink" class="form-control" />
                <span asp-validation-for="ApplicationUserViewModel.VKLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserViewModel.FacebookLink"></label>
                <input asp-for="ApplicationUserViewModel.FacebookLink" class="form-control" />
                <span asp-validation-for="ApplicationUserViewModel.FacebookLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserViewModel.TwitterLink"></label>
                <input asp-for="ApplicationUserViewModel.TwitterLink" class="form-control" />
                <span asp-validation-for="ApplicationUserViewModel.TwitterLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserViewModel.InstagramLink"></label>
                <input asp-for="ApplicationUserViewModel.InstagramLink" class="form-control" />
                <span asp-validation-for="ApplicationUserViewModel.InstagramLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserViewModel.TelegramLink"></label>
                <input asp-for="ApplicationUserViewModel.TelegramLink" class="form-control" />
                <span asp-validation-for="ApplicationUserViewModel.TelegramLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
