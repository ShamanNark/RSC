@model RSC.Controllers.Models.AccountViewModels.ConfirmationUsersViewModel

@{
    ViewData["Title"] = "EditStatusUser";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>EditStatusUser</h2>

<h4>ApplicationUser</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditStatusUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" readonly class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AdditionInfo.MiddleName" class="control-label"></label>
                <input asp-for="AdditionInfo.MiddleName" readonly class="form-control" />
                <span asp-validation-for="AdditionInfo.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionInfo.Name" class="control-label"></label>
                <input asp-for="AdditionInfo.Name" readonly class="form-control" />
                <span asp-validation-for="AdditionInfo.Name" class="text-danger"></span>
            </div>  

            <div class="form-group">
                <label asp-for="AdditionInfo.Surname" class="control-label"></label>
                <input asp-for="AdditionInfo.Surname" readonly class="form-control" />
                <span asp-validation-for="AdditionInfo.Surname" class="text-danger"></span>
            </div>  
            
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" readonly class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" readonly class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                @Html.DropDownList("Status", ViewBag.Statuses as SelectList, new { @class="form-control" })
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

